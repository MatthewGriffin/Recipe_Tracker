@model List<RecipeViewModel>

<div class="text-center row">
    <h1 class="col-10">Recipes</h1>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <a class="form-label col m-md-auto" asp-action="AddRecipe">New Recipe +</a>
    }
</div>
<hr/>
@foreach (var recipe in Model)
{
    var imgSrc = "";
    if (recipe.RecipeDetails.ImageBytes != null)
    {
        var base64 = Convert.ToBase64String(recipe.RecipeDetails.ImageBytes);
        imgSrc = $"data:image/png;base64,{base64}";
    }

    <a href="@Url.Action("ViewRecipe", new { RecipeID = recipe.RecipeId })">
        <div class="row border rounded">
            @if (recipe.RecipeDetails.ImageBytes != null)
            {
                <div class="col-md-6">
                    <img src=" @imgSrc" class="mx-auto d-block" style="max-height:300px;width:auto;height:auto"
                         alt="image of recipe"/>
                </div>
            }
            <div class="col border-start">
                <div class="row border-bottom">
                    <div class="col-md-12">
                        <h3 class="h3">@recipe.RecipeDetails.Title</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12" style="min-height: 222px">
                        @Html.LabelFor(r => r.First().RecipeDetails.Description)
                        <label class="form-label">@recipe.RecipeDetails.Description</label>
                    </div>
                    <div class="col-md-12 border-top">
                        <label class="form-label">Uploaded by: @recipe.UserName</label>
                    </div>
                </div>
            </div>
        </div>
    </a>
    <hr/>
}

<style>
    a,
    a:visited,
    a:hover,
    a:active {
        color: inherit;
        text-decoration: none;
    }
</style>