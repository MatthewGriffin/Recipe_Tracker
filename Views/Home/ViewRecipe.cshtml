@model RecipeViewModel;

@{
    ViewData["Title"] = "View Recipe";
}

<div class="text-center">
    <h1 class="h1">@Model.RecipeDetails.Title</h1>
</div>

@{
    var imgSrc = "";
    if (Model.RecipeDetails.ImageBytes != null)
    {
        var base64 = Convert.ToBase64String(Model.RecipeDetails.ImageBytes);
        imgSrc = $"data:image/png;base64,{base64}";
    }
}

<div class="row pb-4">
    <div class="d-inline">
        <h3 class="h3 d-inline">Details</h3>
    </div>
    <hr />
    <div class="col-md-6 border rounded-start">
        <img src=" @imgSrc" class="mx-auto d-block" style="max-height:300px;width:auto;height:auto" alt="image of recipe"/>
    </div>
    <div class="col-md-6 border rounded-end">
        <div class="row">
            <div class="col-md-12 border-right border-bottom" style="min-height:160px">
                @Html.LabelFor(m => m.RecipeDetails.Description, new { @class = "form-label" })
                @Model.RecipeDetails.Description
            </div>
            <div class="col-md-6 text-center border-bottom border-right">
                @Html.LabelFor(m => m.RecipeDetails.PrepMins, new { @class = "form-label" })
                @Model.RecipeDetails.PrepMins
            </div>
            <div class="col-md-6 text-center border-bottom">
                @Html.LabelFor(m => m.RecipeDetails.CookMins, new { @class = "form-label" })
                @Model.RecipeDetails.CookMins
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center border-bottom">
                @Html.Label("", "Total Time: ", new { @class = "form-label" })
                @{
                    var total = Model.RecipeDetails.PrepMins + Model.RecipeDetails.CookMins;
                }
                @total
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                @Html.LabelFor(m => m.RecipeDetails.Servings, new { @class = "form-label" })
                @Model.RecipeDetails.Servings
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 border-top">
                @Html.LabelFor(m => m.RecipeDetails.Tags, new { @class = "form-label" })
                @Model.RecipeDetails.Tags
            </div>
        </div>
    </div>
</div>
<div class="row">
    <h3 class="h3">@Html.DisplayNameFor(m => m.Ingredients)</h3>
    <hr />
    @{
        var i = 1;
        foreach (var ing in Model.Ingredients)
        {
            <h6>@ing.Detail</h6>
            i += 1;
        }
    }
</div>
<div class="row">
    <h3 class="h3">@Html.DisplayNameFor(m => m.Instructions)</h3>
    <hr />
    @{
        i = 1;
        foreach (var inst in Model.Instructions)
        {
            <h6>@i) @inst.Text</h6>
            i += 1;
        }
    }
</div>