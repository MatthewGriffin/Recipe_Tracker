@model RegisterViewModel;

<form asp-controller="Account" asp-action="Register" method="post" onsubmit="DisableButton()">
    <div>
        <label class="form-label">Email</label>
        <input class="form-control" type="email" asp-for="Email"/>
    </div>
    <div>
        <label class="form-label">Password</label>
        <input class="form-control" type="password" asp-for="Password"/>
    </div>
    <button id="register" class="btn btn-success" type="submit">Register</button>
    <br/>
    @Html.ValidationSummary()
</form>
@section Scripts {
    <script>
        function DisableButton(){
            $('#register').prop("disabled", true);
        }
    </script>
}